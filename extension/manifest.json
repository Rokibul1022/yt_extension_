{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0",
  "description": "Download YouTube videos as MP4 or MP3",
  "permissions": ["activeTab", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "host_permissions": [
    "http://localhost:5000/*",
    "https://yt-extension-0drm.onrender.com/*"
  ]
}
